# Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration (Supabase)
DATABASE_URL=postgresql://your_db_user:your_password@db.your_project.supabase.co:5432/postgres
SUPABASE_URL=https://your_project.supabase.co
SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@ramsc.edu

# LINE/Telegram Configuration
LINE_CHANNEL_ACCESS_TOKEN=your_line_access_token
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Storage Configuration
STORAGE_BASE_URL=https://your_storage_url.com
STORAGE_ACCESS_KEY=your_storage_access_key
STORAGE_SECRET_KEY=your_storage_secret_key

# Embeddings API Configuration
EMBEDDINGS_API_URL=https://api.openai.com/v1/embeddings
EMBEDDINGS_MODEL=text-embedding-ada-002

# Scheduler Configuration
SCHEDULER_TIMEZONE=Asia/Bangkok
DAILY_SCHEDULE_TIME=07:00